<Alloy>
	<!-- Main Container of the View, title of the Window is pulled from the title property on the main view-->
	<Window class="container" opacity="0.0" title="L('lblDetailsTitle')">
		<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
		
		<!-- 
			Profile Page
			- A ScrollView that an end user can swipe to show more information about the user.
			- Information View, shows phone, email, IM
			- About View, a blurb of text about the user
			- MapView shows an annotation of where the user is located
		-->
		<ScrollView id="contactInfo" class='vgroup top'>
			<!--  Map View Leverages the Map Module, allowing for v2 of Google Maps and latest codebase unifying Google v2 and IOS -->
			<Module
				id="mapview"
				module="ti.map"
				method="createView"
				platform="android,ios,windows"
				enableZoomControls="true"
				class="top span-width"
			/>
			
			<!-- Information -->
			<View class="vgroup top vsize" left="5" right="5">
				<Label id="nome" class="h3 primary-color top-buffer no-touch size" />
				<Label id="tipo" class="h4 gray no-touch size" />
				<Label id="indirizzo" class="h5 gray no-touch size" />
			</View>
			
			<!-- User Actions --->
			<View class="hgroup top-buffer size">
				<Label id="callBtn" class="icon icon-btn icon-phone" onClick="callProfile" />
				<Label id="addFavoriteBtn" class="icon icon-btn icon-star" onClick="toggleFavorite" />
				<Label id="reportBtn" class="icon icon-btn icon-exclamation-triangle" onClick="reportProfile" />
			</View>
			
			<View class='separator' />
			
			<View id="infoCibiContainer" class="vgroup top size hbuffer">
				<View id="tipiCibiContainer" class="vgroup vbuffer hfill vsize">
					<Label id="tipiCibiLabel" class="h4 primary-color" text="L('lblFoodTypes')" />
					<Label id="tipiCibiValue" class="h5 gray size" /> 
				</View>
				<View id="catCibiContainer" class="vgroup hfill vsize">
					<Label id="catCibiLabel" class="h4 primary-color" text="L('lblFoodCategories')" />
					<Label id="catCibiValue" class="h5 gray size" />
				</View>
			</View>
			
			<View id="infoCibiSeparator" class='separator' />
			
			<!-- Contact Information -->
		 	<View class='buffer vgroup size'>
				<View id="telefonoContainer" class='hgroup size left-buffer top-buffer'>
					<Label class="h3 icon icon-phone icon-small primary-color left top" />
					<Label id="telefono" class="h6 gray left-buffer"></Label>
				</View>
				<View id="emailContainer" class='hgroup size left-buffer top-buffer'>
					<Label class="h3 icon icon-email icon-small primary-color left top" />
					<Label id="email" class="h6 gray left-buffer"></Label>
				</View>
				<View id="webContainer" class='hgroup size left-buffer top-buffer'>
					<Label class="h3 icon icon-cloud icon-small primary-color left top" />
					<Label id="web" class="h6 gray left-buffer right-buffer"></Label>
				</View>
				<View id="aperturaContainer" class='hgroup size left-buffer top-buffer'>
					<Label class="h3 icon icon-calendar icon-small primary-color left top" />
					<Label id="apertura" class="h6 gray left-buffer right-buffer"></Label>
				</View>
			</View>
		</ScrollView>
		
		<View id="advContainer">
		</View>
	</Window>
</Alloy>