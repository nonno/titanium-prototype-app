<Alloy>
    <Window>
    	<ProgressIndicator ns="Ti.UI.Android" platform="android" id="progressIndicator"
         message="Caricamento..." cancelable="false"
         location="Ti.UI.Android.PROGRESS_INDICATOR_DIALOG" />
        <View id="titleBar">
            <Button id="backButton"></Button>
            <Label id="titleLabel">Dettagli punto vendita</Label>
        </View>
        <View id="columnContainer">
            <ScrollView id="column_1" class="column">
                <View id="datiColonna1" class="datiColonna">
                    <Label id="nameLabel"></Label>
                    <Label id="dataLabel"></Label>
                    <Label id="distanceLabel"></Label>
                    <View id="map"></View>
                </View>
            </ScrollView>
            <View class="spacer" id="spacer_1"></View>
            <ScrollView id="column_2" class="column">
                <View id="datiColonna2" class="datiColonna">
                    <View class="labelContainer">
                        <Label class="labelLabel">Orari</Label>
                    </View>
                    <View id="orariEstate" class="orario">
                        <View class="orarioTitleContainer">
                            <ImageView class="orarioTitle" image="/images/label_orarioestivo.png"></ImageView>
                        </View>
                        <View id="orarioEstateContent" class="orarioContent"></View>
                    </View>
                    <View id="orariInverno" class="orario">
                        <View class="orarioTitleContainer">
                            <ImageView class="orarioTitle" image="/images/label_orarioinvernale.png"></ImageView>
                        </View>
                        <View id="orarioInvernoContent" class="orarioContent"></View>
                    </View>
                </View>
            </ScrollView>
            <View class="spacer" id="spacer_2"></View>
            <ScrollView id="column_3" class="column">
                <View id="datiColonna3" class="datiColonna">
                    <View height="16dp" backgroundColor="white" zIndex="2"></View>
                    <View class="labelContainer">
                        <Label class="labelLabel">Servizi</Label>
                    </View>
                    <View id="servizi" class="tabella"></View>
                </View>
            </ScrollView>
        </View>
    </Window>
</Alloy>